{
  "title": "approve approval and get error from the bl (disableMiniSync: true)",
  "task": "approve",
  "config": {
    "blConfig": {
      "disableMiniSync": true
    }
  },
  "taskData": {
    "type": "approve",
    "id": "taskId",
    "approval": "caprizaApproval.json"
  },
  "steps": [
    {
      "func": "getBackendApproval",
      "args": [
        {
          "id": "approvalId"
        }
      ],
      "output": [ "caprizaApproval.json" ]
    },
    {
      "func": "getApproval",
      "args": "caprizaApproval.json",
      "outputType": "Result.Success",
      "output": { "data": { "approval": "rawApproval.json" } }
    },
    {
      "func": "approve",
      "args": [ { "approval": "caprizaApproval.json" }, {}],
      "exception": "CONNECTOR_ERROR"
    },
    {"func":"updateTask", "args":["taskId",{"succeeded": false, "payload": "errors/connectorError.json"}], "output":{}}
  ]
}
